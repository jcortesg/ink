<div class="col-xs-12 col-sm-12 col-md-12 center">

  <h2>Registrate y conoce un nuevo mundo!</h2>


  <div class="row sing_up">
    <div class="col-xs-12 col-sm-12 col-md-7 center form">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-8 col-md-offset-2">
          <%= form_for(resource, :as => resource_name, :html => {:multipart => true , :class=>"custom"}, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
  
        <div class="form-group">
          <%= f.text_field :name ,:class=>"form-control input-lg", :placeholder => "Nombre"%>
        </div>
        <div class="form-group">
          <%= f.email_field :email , :class=>"form-control input-lg",:placeholder => "Email"%>
        </div>
        <div class="form-group">
          <%= f.password_field :password , :class=>"form-control input-lg",:placeholder => "Password"%>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation ,:class=>"form-control input-lg", :placeholder => "Confirmation Password"%>
        </div>
        

        <%= f.submit "Registrate", :class =>" btn btn-success  btn-lg btn-block" %>

      <% end %>

        </div>
      </div>
      
    </div>
    <div class="col-xs-12 col-sm-12 col-md-5 ">
      <button type="button" class="btn btn-face btn-lg btn-block">
        <span class="icon-facebook"></span> Crea tu cuenta con Facebook</button>
      <button type="button" class="btn btn-danger  btn-lg btn-block">
        <span class="icon-gplus"></span> Crea tu cuenta con Google</button>
      <button type="button" class="btn btn-info btn-lg btn-block">
        <span class="icon-twitter"></span> 
        Crea tu cuenta  Twitter</button>


    </div>
  </div>
</div>
