.row
	.col-sm-12.col-md-10.col-lg-10
		.content_site
			.article
				.title
					%h3
						Portafolios
				.row.books_index
					#container
						- @books.each do |book|
							-book.pictures.each do |pic|
								.item_.col-sm-12.col-md-3.col-lg-3
									.center
										= link_to (image_tag pic.url_url(:thumb)), "#{pic.url}" ,:class=>"fancybox-button img_ " , :rel=>"fancybox-button"
									

:javascript

	$(document).ready(function() {
		$(".fancybox-button").fancybox({
			prevEffect		: 'none',
			nextEffect		: 'none',
			closeBtn		: false,
			helpers		: {
				title	: { type : 'inside' },
				buttons	: {}
			}
		});
		var container = document.querySelector('#container');
		var msnry = new Masonry( container, {
	  itemSelector: '.item_'
	});
	});

