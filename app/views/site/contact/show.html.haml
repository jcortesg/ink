.row
	.col-sm-12.col-md-8.col-lg-8
		.content_site
			.col-sm-12.col-md-12.col-lg-12
				.title
					%h3
						Conatactame
			.col-sm-12.col-md-6.col-lg-6

				=form_tag 
				.form-group
					= text_field_tag :nombre,"", :placeholder =>"Nombre",:class=>"form-control input-lg"
				.form-group
					= email_field_tag :email, "",:placeholder =>"Email", :class=>"form-control input-lg"
				.form-group
					= text_area_tag :mensaje,"",:placeholder =>"Mensaje", :class=>"form-control input-lg", :rows =>"4"
				.form-group
					= submit_tag "Enviar", :class => "pull-right btn btn-success"

			.col-sm-12.col-md-6.col-lg-6
				.article
					%p
						= @user.site.contact

					.row
						.col-sm-12.col-md-12.col-lg-12
							.social
								%p.icon-facebook-circled
									=link_to "https://www.facebook.com/#{@user.facebook}", 'facebook.com/#{@user.facebook}'
								%p.icon-twitter-circled
									=link_to "https://twitter.com/#{@user.twitter}", 'twitter.com/#{@user.twitter}'
								%p.icon-instagramm
									=link_to "http://instagram.com/#{@user.instagram}", '"instagram.com/#{@user.instagram}"'